 <% @color = "white" %>

 
 <section class="min-vh-100 bg-primary">
        <div class="container d-flex align-items-center pt-lg pt-lg-0">
            <div class="col py-lg">
                <div class="row justify-content-center">
                    <div class="col-lg-6 text-center">
                        <h1 class="text-white">Change your password</h1>
                        <p class="lead text-white mt-4">Pleasse chose your new password</p>
                          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource, color: @color %>
                            <%= f.hidden_field :reset_password_token %>

                            <div class="field">
                              <%= f.label :password, "New password", class: 'h3 text-white' %><br />
                              <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                              <% end %>
                              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-emphasized", placeholder: "New password" %>
                            </div>

                            <div class="field">
                              <%= f.label :password_confirmation, "Confirm new password", class: 'h3 text-white' %><br />
                              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-emphasized", placeholder: "Password confirmation" %>
                            </div>

                            <div class="actions">
                                <%= f.button :submit, class: "btn btn-secondary btn-circle btn-icon btn-translate--hover mt-4 scroll-me" do %>
                                    <span class="btn-inner--text">Change my password</span>
                                    <span class="btn-inner--icon"><i class="fas fa-pencil-alt"></i></span>
                                <%end%>
                            </div>
                          <% end %>
                          <br>      
                        <%= render "devise/shared/links", color: @color %>
                    </div>
                </div>
            </div>
        </div>
</section>






